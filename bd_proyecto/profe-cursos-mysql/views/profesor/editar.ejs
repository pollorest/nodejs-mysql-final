<%- include("../header"); %>
<div class="col-12">
    <h1>Editar profesor</h1>
    <form method="post" action="/profesor/actualizar">

        <input value="<%= profesor.id %>" name="id" type="hidden">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= profesor.nombre %>" required id="nombre" placeholder="Nombre del profesor"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input value="<%= profesor.precio %>" required id="precio" placeholder="Precio del profesor"
                class="form-control" type="number" name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/profesor" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>
